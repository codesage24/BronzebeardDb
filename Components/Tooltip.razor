@using TooltipPosition = Models.Position;

<div class="tooltip-container" @onmouseover="ShowTooltip" @onmouseout="HideTooltip">

    @ChildContent

    @if (IsTooltipVisible)
    {
        <div class="tooltip-box @Position">
            @Text
        </div>
    }
</div>

@code {
    [Parameter] public string Text { get; set; } = string.Empty;
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string Position { get; set; } = TooltipPosition.Top;

    bool IsTooltipVisible { get; set; }

    void ShowTooltip() => IsTooltipVisible = true;
    void HideTooltip() => IsTooltipVisible = false;
}
